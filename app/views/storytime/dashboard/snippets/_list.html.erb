<div id="list" class="pane">
  <h3 class="heading"> 
    Text Snippets
    
    <%= link_to url_for([:new, :dashboard, :snippet]), class: "btn btn-info btn-sm pull-right" do %>
      <i class="glyphicon glyphicon-plus"></i>
    <% end %>
  </h3>
  <div class="scroll-y">
    <ul class="dashboard-list">
      <% @snippets.each do |snippet| %>
        <li id="snippet_<%= snippet.id %>" class="<%= 'active' if current_page?(url_for([:edit, :dashboard, snippet])) %>">
          <%= link_to "#{snippet.language.lang} #{snippet.name}", [:edit, :dashboard, snippet], page_number: params[:page_number] %>
        </li>
      <% end %>
    </ul>
    <div class="pagination-wrapper">
      <%= paginate @snippets, param_name: "page_number" %>
    </div>
  </div>
</div>